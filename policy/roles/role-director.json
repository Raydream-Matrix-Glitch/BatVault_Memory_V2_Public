{
  "role": "director",
  "policy_version": "v3",
  "namespaces": [
    "corp",
    "eng",
    "public"
  ],
  "domain_scopes": ["corp","eng","public", "sales"],
  "edge_allowlist": [
    "LED_TO",
    "CAUSAL",
    "ALIAS_OF"
  ],
  "sensitivity_ceiling": "medium",
  "alias_max_hops": 1,
  "field_visibility": {
    "decision": {
      "visible_fields": [
        "title",
        "timestamp",
        "description",
        "decision_maker.*",
        "summary",
        "tags",
        "x-extra"
      ],
      "rationale_visible": false,
      "allow_alias_projection": true
    },
    "event": {
      "visible_fields": [
        "title",
        "timestamp",
        "description",
        "x-extra"
      ],
      "allow_alias_projection": true
    }
  },
  "extra_visible": [
    "public.*",
    "safe.note",
    "telemetry.build_id"
  ]
}
