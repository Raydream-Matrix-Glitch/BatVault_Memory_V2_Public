{
  "role": "manager",
  "namespaces": ["product","marketing","sales"],
  "domain_scopes": ["product*","marketing*"],
  "edge_allowlist": ["LED_TO","ALIAS_OF"],
  "sensitivity_ceiling": "medium",
  "max_hops": 1,
  "alias_max_hops": 1,
  "field_visibility": {
    "decision": {
      "visible_fields": ["id","type","domain","title","timestamp"],
      "rationale_visible": false
    },
    "event": {
      "visible_fields": ["id","type","domain","title","timestamp"],
      "allow_alias_projection": true
    }
  },
  "extra_visible": ["tags","note"]
}
