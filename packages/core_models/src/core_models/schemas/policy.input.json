{ "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://batvault/schemas/policy.input.json",
  "title": "BatVault Policy Decision Input",
  "type": "object",
  "additionalProperties": false,
  "required": ["identity", "resource", "intents", "snapshot_etag"],
  "properties": {
    "identity": {
      "type": "object",
      "additionalProperties": false,
      "required": ["user_id"],
      "properties": {
        "user_id": { "type": "string", "minLength": 1 },
        "org_id":  { "type": "string" },
        "email":   { "type": "string" },
        "roles":   { "type": "array", "items": { "type": "string" } }
      }
    },
    "resource": {
      "type": "object",
      "additionalProperties": false,
      "required": ["anchor_id"],
      "properties": {
        "anchor_id": { "type": "string", "pattern": "^[^#]+#.+" }
      }
    },
    "intents": { "type": "array", "minItems": 1,
      "items": { "type": "string",
        "enum": ["read", "enrich", "expand_candidates", "enrich_batch", "resolve"] } },
    "edges": { "type": "array" },
    "headers": { "type": "object", "additionalProperties": { "type": "string" } },
    "org_overrides": { "type": "object" },
    "snapshot_etag": { "type": "string", "minLength": 1 }
  } }