{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://batvault.dev/schemas/answer.template.json",
  "title": "Answer Template Definition",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string", "minLength": 1, "pattern": "^[a-z0-9][a-z0-9._-]*$" },
    "blocks": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "enum": ["lead","description","key_events","next","owner","decision_id"]
      }
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "lead":        { "type": "object", "additionalProperties": false, "properties": { "max_chars": { "type": "integer", "minimum": 1 } } },
        "description": { "type": "object", "additionalProperties": false, "properties": { "max_chars": { "type": "integer", "minimum": 1 } } },
        "key_events":  { "type": "object", "additionalProperties": false, "properties": { "max_items": { "type": "integer", "minimum": 0 } } },
        "next":        { "type": "object", "additionalProperties": false, "properties": { "required": { "type": "boolean" } } },
        "owner":       { "type": "object", "additionalProperties": false, "properties": { "required": { "type": "boolean" } } }
      }
    }
  },
  "required": ["id","blocks"]
}