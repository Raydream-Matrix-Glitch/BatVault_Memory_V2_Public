{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://batvault.dev/schemas/memory.query.request.json",
  "title": "Memory Query Request (v3)",
  "type": "object",
  "additionalProperties": false,
  "required": ["question"],
  "properties": {
    "question": {
      "type": "string",
      "minLength": 1
    },
    "anchor": {
      "type": "string",
      "minLength": 1
    },
    "policy": {
      "type": "object"
    },
    "graph": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "alias": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "max_hops": {
              "type": "integer",
              "minimum": 0,
              "maximum": 3
            }
          }
        }
      }
    }
  }
}