{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://batvault.dev/schemas/answer.blocks.json",
  "title": "Structured Answer Blocks",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "lead":        { "type": "string", "minLength": 1 },
    "description": { "type": "string" },
    "key_events":  { "type": "array", "items": { "type": "string" }, "minItems": 1 },
    "next":        { "type": "string" },
    "owner": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "role": { "type": "string" }
      },
      "required": ["name"]
    },
    "decision_id": { "type": "string", "minLength": 1 }
  },
  "required": ["lead"]
}